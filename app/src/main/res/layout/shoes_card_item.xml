<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shoes_item"
    android:layout_width="215dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="30dp"
    app:cardBackgroundColor="#F1F0F2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shoes_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/shoes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/shoes_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:layout_marginTop="30dp"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/shoes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/shoes_type"
            app:layout_constraintStart_toStartOf="@+id/shoes_type"
            android:textColor="#2E2E2E"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shoes_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/shoes_title"
            app:layout_constraintStart_toStartOf="@+id/shoes_type"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="#2C96F1"
            android:layout_marginBottom="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>